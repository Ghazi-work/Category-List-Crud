@model List<Crud.Models.Category>
@{
    ViewData["Title"] = "Index";
}
<div class="container my-2">
    <div class="row my-5">
        <div class="col-6">
          <h1>Category List</h1>
          </div>
     <div class="col-5 text-end my-2">
         <a class="btn btn-success" asp-action="Create" asp-controller="Category"> <i class="bi bi-plus-circle"></i>&nbsp;&nbsp;Create new</a>
     </div>
    </div>
</div>



<div class="container my-5">
<table class="table table-bordered my-3 table-striped">
    <tr>
        <th>Name</th>
        <th>Display Order</th>
        <th>Date</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    @foreach (var item in Model)
    {
       <tr>
           <td>@item.Name</td>
           <td>@item.DisplayOrder</td>
           <td>@item.Date</td>
           <td><a class="btn btn-warning" asp-action="Edit" asp-controller="Category" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a></td>
           <td><a class="btn btn-danger" asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id" ><i class="bi bi-trash"></i></a></td>
       </tr>
    }


</table>
</div>


